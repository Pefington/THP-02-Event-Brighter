<div class="container d-flex justify-content-center text-center">
  <div class="card shadow-sm w-50 text-bg-light">
    <div class="card-header">
      <div><%= link_to @event.title, event_path(:id) %></div>
    </div>
    <div class= "card-body">
      <%= form_with url: profile_path, method: :post, local: true do |form| %>
        <p>Description</p>
        <%= form.text_field :description, value: @event.description %>
        <br><br>
        <p>Location</p>
        <%= form.text_field :location, value: @event.location %>
        <br><br>
        <p>Price</p>
        <%= form.text_field :price, value: @event.price %>
        <br><br>
        <p>Starting date</p>
        <%= form.text_field :start_date, value: @event.start_date %>
        <br><br>
        <p>Duration</p>
        <%= form.text_field :duration, value: @event.duration %>
        <br><br>
        <%= form.submit "Accept" %>
      <% end %>
      <%= link_to "Delete this event", event_path(@event.id), method: :delete, class: "btn btn-lg btn-primary"%>
    </div>
  </div>
</div>
